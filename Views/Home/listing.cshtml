@model Listing
    
<div class="container-fluid">
    <hr/><h2 class="my-2 text-center">Active Listing - @Model.Title</h2><hr/>
    <div class="row bbody d-flex justify-content-center">
        <div class="col-sm-5 m-3 card p-0 listingView shadow mb-3 bg-body rounded">
            <img class="img-fluid card-img-top" src="@Model.ImageUrl" alt="Image">
            <div class="card-body">
                <h2 class="card-title"> @Model.Title </h2>
                <p class="card-text"><b>Category:</b> @Model.Category </p>
                <p class="card-text"><b>Starting Bid:</b> @Model.StartAmount.ToString("c")</p>
                <p class="card-text"><b>Description:</b></p>
                <p class="card-text">@Model.Description</p>
                <small><p class="card-text text-mute"><b>Owner:</b> Owner </p></small>
                <small><p class="card-text text-mute"><b>Date Added:</b> Date Created </p></small>
            </div>
        </div>
        <div class="col-sm-5 m-3 card p-0 commentsView shadow mb-3 bg-body rounded">
            <div class="container-fluid h-100">
                <div class="row h-100">
                    <div class="col-12 h-25 m-3">
                        <div class="row h-100 m-auto">
                                <div class="col-6 mt-5">
                                    @* {% if listing.owner == user and listing.active == True %} *@
                                    @* <div class="mt-3 mx-3">
                                        <form action="" class="form" method="POST">
                                            <div class="form=group">
                                                <input type="text" name="listing" value= hidden />
                                            </div>
                                            <div class="form=group">
                                                <button class="btn btn-primary">Close Bid&nbsp;<i class="bi bi-x-circle"></i></button>
                                            </div>
                                        </form>
                                    </div> *@
                                    @* {% elif listing.owner == user and listing.active == False %} *@
                                    @* <div class="mt-3 mx-3">
                                        <form action="" class="form" method="POST">
                                            <div class="form=group">
                                                <input type="text" name="listing" value="" hidden />
                                            </div>
                                            <div class="form=group">
                                                <button class="btn btn-primary" disabled>Close Bid&nbsp;<i class="bi bi-x-circle"></i></button>
                                            </div>
                                        </form>
                                    </div> *@
                                    @* {% else %} *@
                                    @* {% if listing.active == True %}
                                        {% if listing.id in watchlist %}
                                        <form action="{% url 'remove-watchlist' %}" class="form" method="POST">
                                            {% csrf_token %}
                                            <div class="form=group">
                                                <input type="text" name="listing" value={{ listing.id }} hidden>
                                            </div>
                                            <div class="form=group">
                                                <button class="btn btn-primary">Remove from Watchlist&nbsp;<i class="bi bi-x-lg"></i></i></button>
                                            </div>
                                        </form>
                                        {% else %} *@
                                        <form action="" class="form" method="POST">
                                            <div class="form=group">
                                                <input type="text" name="listing" value="" hidden />
                                            </div>
                                            <div class="form=group">
                                                <button class="btn btn-primary">Add to Watchlist&nbsp;<i class="bi bi-heart-fill"></i></button>
                                            </div>
                                        </form>
                                        @* {% endif %} *@
                                    @* {% else %}
                                        {% if listing.id in watchlist %}
                                        <form action="{% url 'remove-watchlist' %}" class="form" method="POST">
                                            {% csrf_token %}
                                            <div class="form=group">
                                                <input type="text" name="listing" value={{ listing.id }} hidden>
                                            </div>
                                            <div class="form=group">
                                                <button class="btn btn-primary">Remove from Watchlist&nbsp;<i class="bi bi-x-lg" disabled></i></i></button>
                                            </div>
                                        </form>
                                        {% else %}
                                        <form action="{% url 'add-watchlist' %}" class="form" method="POST">
                                            {% csrf_token %}
                                            <div class="form=group">
                                                <input type="text" name="listing" value={{ listing.id }} hidden>
                                            </div>
                                            <div class="form=group">
                                                <button class="btn btn-primary">Add to Watchlist&nbsp;<i class="bi bi-heart-fill" disabled></i></button>
                                            </div>
                                        </form>
                                        {% endif %}
                                    {% endif %} *@
                                </div>
                                <div class="col-6 d-flex mt-2">
                                    <div>
                                        @* {% if messages %}
                                            {% for message in messages %}
                                                <div class="alert alert-info" role="alert">{{ message }}</div>
                                            {% endfor %}
                                        {% endif %}
                                        {% if listing.active == True %} *@
                                        <form action="" class="form" method="POST">
                                            <div class="form=group">
                                                <input type="text" name="listing" value="" hidden />
                                            </div>
                                            <div class="input-group form-group my-3">
                                                <span class="input-group-text" id="basic-addon1">$</span>
                                                <input type="number" name="amount" class="form-control" placeholder="Bid" aria-describedby="basic-addon1" required>
                                            </div>
                                            <div class="form-group my-3">
                                                <button type="submit" class="btn btn-secondary">Place Bid</button>
                                            </div>
                                        </form>
                                        @* {% elif winner %}
                                            <div class="alert alert-success mt-4" role="alert"><p><small>Congratulations {{winner|title}}! You won the bid.</small></p></div>
                                        {% else %}
                                            <div class="alert alert-info mt-4" role="alert"><p><small>Bidding is closed for this item.</small></p></div>
                                        {% endif %} *@
                                    </div>
                                </div>
                            @* {% endif %} *@
                        </div>
                    </div>
                    <div class="col-12 h-75">
                        <div class="row h-100">
                            <div class="col-6 h-100 p-3">
                                <h3 class="mx-3">Comment Form</h3>
                                <div class="container">
                                    @* {% if listing.active == True %} *@
                                    <form action="" method="post">
                                        <div class="form-group my-3">
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                            <label for="name" class="form-lable">Name:</label>
                                            <input type="text" name="name" value="@User.Identity.Name" class="form-control" disabled readonly>
                                            }else
                                            {
                                            <label for="name" class="form-lable">Name:</label>
                                            <input type="text" name="name" class="form-control" required>
                                            }
                                        </div>
                                        <div class="form-group my-3">
                                            <label for="comment" class="form-lable">Comment:</label>
                                            <textarea class="form-control" name="comment" rows="3" required></textarea>
                                        </div>
                                        <div class="form-group my-3">
                                            <input type="submit" class="btn btn-secondary" value="Submit">
                                        </div>
                                    </form>
                                    @* {% else %}
                                    <form action="{% url 'listing' listing.id %}" method="post">
                                        {% csrf_token %}
                                        <div class="form-group">
                                            {% if user.is_authenticated %}
                                            <label for="name" class="form-lable">Name:</label>
                                            <input type="text" name="name" value="{{user.username|title}}" class="form-control" disabled readonly>
                                            {% else %}
                                            <label for="name" class="form-lable">Name:</label>
                                            <input type="text" name="name" class="form-control" disabled``>
                                            {% endif %}
                                        </div>
                                        <div class="form-group">
                                            <label for="comment" class="form-lable">Comment:</label>
                                            <textarea class="form-control" name="comment" rows="3" disabled></textarea>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-secondary" value="Submit" disabled>
                                        </div>
                                    </form>
                                    {% endif %} *@
                                </div>
                            </div>
                            <div class="col-6 h-100 p-3 container-fluid border-start">
                                <p class="mb-3 ms-3"><b>Comments...</b></p>
                                <div class="row w-100 d-flex justify-content-center comment-cont">
                                    @* {% if not listing.reviews.all %}
                                        <p>No comments</p>
                                    {% else %} *@
                                        @* {% for review in listing.reviews.all %}
                                            <div class='col-11 shadow-sm mb-2 pt-3 h-auto bg-body rounded comment-card'>
                                                <div>
                                                    <p>{{ review.comment }}</p>
                                                    <div class="d-flex justify-content-between">
                                                        <p class="text-muted"><sub><i class="bi bi-calendar-date"></i>&nbsp;{{ review.date_added }}</sub></p>
                                                        <p class="text-right"><small><i class="bi bi-person"></i>&nbsp;{{ review.name }}</small></p>
                                                    </div>
                                                </div>
                                            </div>                                       
                                        {% endfor %} *@
                                    @* {% endif %} *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>